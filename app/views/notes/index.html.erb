    <h1>
      List of all notes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new note
    </h2>

    <form action="/insert_note" method="post">
      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="subject_box">
          Subject
        </label>

        <input type="text" id="subject_box" name="query_subject">
      </div>

      <button class="btn btn-primary">
        Create note
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Subject
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_notes.each do |a_note| %>
      <tr>
        <td>
          <%= a_note.id %>
        </td>

        <td>
          <%= a_note.body %>
        </td>

        <td>
          <%= a_note.subject %>
        </td>

        <td>
          <%= a_note.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_note.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_note.updated_at) %> ago
        </td>

        <td>
          <a href="/notes/<%= a_note.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
